<UserControl x:Class="HammingCorrector.Views.CorrectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HammingCorrector.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:dgbind="http://gu.se/DataGrid2D"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             prism:ViewModelLocator.AutoWireViewModel="True" >
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Кодовые конструкции" Style="{StaticResource Heading2}" />
            <DataGrid dgbind:ItemsSource.RowsSource="{Binding HCodesCollection}" MaxHeight="200" HeadersVisibility="None" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>
